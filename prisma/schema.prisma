generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Match {
  id        String    @id
  map       String?
  mode      String?
  region    String?
  startedAt DateTime?

  roundsRed  Int?
  roundsBlue Int?

  players PlayerMatch[]

  @@index([startedAt])
}

model Player {
  id   String @id @default(cuid())
  name String
  tag  String

  puuid        String?   @unique
  lastSyncedAt DateTime?

  matches PlayerMatch[]

  @@unique([name, tag])
}

model PlayerMatch {
  id       String @id @default(cuid())
  matchId  String
  playerId String

  team    String?
  kills   Int?
  deaths  Int?
  assists Int?

  score Int?

  damage    Int?
  headshots Int?
  bodyshots Int?
  legshots  Int?
  agentIcon String?

  match  Match  @relation(fields: [matchId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([matchId, playerId])
  @@index([playerId])
  @@index([matchId])
}
